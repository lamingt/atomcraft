---
import { Image } from "astro:assets";
import RolesLayout from "../layouts/RolesLayout.astro";
import ed from "../assets/roles/ed.png";
import RolesCard from "../components/RolesCard.astro";
---

<RolesLayout>
  <div class="mt-[100px] lg:mt-[150px] max-w-[1500px] w-[90%] mx-auto mb-[50vh]">
    <div class="flex flex-col items-center gap-20 w-full">
      <h1 class="lg:w-2xl md:text-5xl lg:text-6xl text-center font-semibold">
        Meet our team of <span class="italic">Creators</span>, <span class="italic">Engineers</span>, and <span class="italic">Visionaries</span>
      </h1>

      <div class="flex flex-col items-center w-full">
        <h2 class="text-4xl font-semibold">
          Academics
        </h2>
        <div class="grid grid-cols-2 w-[70%]">
          <RolesCard imageSrc={ed} imageAlt="Edward Obbard" name="Edward Obbard" role="School of Mechanical and Manufacturing Engineering" />
          <RolesCard imageSrc={ed} imageAlt="Edward Obbard" name="Edward Obbard" role="School of Mechanical and Manufacturing Engineering" />
        </div>
      </div>
    </div>

  </div>
</RolesLayout>