---
import Hero from "../components/Hero.astro";
import PartnerCarousel from "../components/PartnerCarousel.astro";
import WhatWeDo from "../components/WhatWeDo.astro";
import Tokamak from "../components/Tokamak.astro";
import AboutUs from "../components/AboutUs.astro";
import Story from "../components/Story.astro";
import Future from "../components/Future.astro";
import IndexLayout from "../layouts/IndexLayout.astro";
import Collaborate from "../components/Collaborate.astro";
import Mission from "../components/Mission.astro";
---

<IndexLayout>
  <Hero />

  <div class="mx-auto max-w-[1920px] px-6 md:px-[120px] relative">
    <div class="pointer-events-none absolute top-0 left-0 w-screen h-[100px] md:h-[220px] z-10 bg-gradient-to-b from-black to-transparent"></div>
    <WhatWeDo />
    <PartnerCarousel />
    <Collaborate/>
    <Mission/>
    <Tokamak />
    <AboutUs />
    <Story />
    <Future />
  </div>
</IndexLayout>
