---
export type Props = {
  href: string;
  id?: string;
  class?: string;
};

const { href, id, class: extraClass = "" } = Astro.props;
---

<a
  href={href}
  id={id ? id : undefined}
  class:list={[
    "bg-cyan border-cyan hover:border-cyan hover:text-cyan active:bg-cyan active:border-cyan inline-flex cursor-pointer items-center justify-center rounded-[100px] border-1 px-[25px] py-[10.87px] text-sm text-black duration-200 hover:bg-transparent active:text-black active:opacity-60 sm:text-[18px] md:border-2 lg:px-[30px] lg:py-[13px] xl:px-[38px] xl:py-[16.5px]",
    extraClass,
  ]}
>
  <slot />
</a>
